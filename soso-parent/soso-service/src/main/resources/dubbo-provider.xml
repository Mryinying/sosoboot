<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
       http://code.alibabatech.com/schema/dubbo http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

    <dubbo:application name="soso-service"/>

    <dubbo:registry address="zookeeper://192.168.203.130:2181"/>

    <dubbo:protocol name="dubbo"/>
	<bean id="userService" class="com.it.service.impl.UserServiceImpl"></bean>

    <!-- 声明需要暴露的服务接口 -->
    <dubbo:service interface="com.it.service.UserService"
                   ref="userService" protocol="dubbo" timeout="40000" retries="0"/>
                   
    <!-- <dubbo:service interface="com.it.service.CauseService" ref="causeServiceImpl" protocol="dubbo"/> -->
    
</beans>